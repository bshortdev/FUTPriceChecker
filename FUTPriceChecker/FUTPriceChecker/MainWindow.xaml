<Window x:Class="FUTPriceChecker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FUTPriceChecker"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Label x:Name="LBL_Title" Content="FUT Price Checker" HorizontalAlignment="Center" Margin="0,30,0,0" VerticalAlignment="Top" Background="White" FontFamily="Trebuchet MS" FontSize="14"/>
        <Button x:Name="BTN_CheckPrices" Content="Check Player Price" HorizontalAlignment="Center" Margin="0" VerticalAlignment="Center" Width="112" FontFamily="Trebuchet MS" Click="BTN_CheckPrices_Click"/>
        <ScrollViewer HorizontalAlignment="Left" Height="140" Margin="20,0,0,0" VerticalAlignment="Bottom" Width="472" CanContentScroll="True" MaxHeight="140">
            <TextBlock x:Name="TBK_Results" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Width="472" Foreground="Black" ScrollViewer.CanContentScroll="True"><Run Text="Awaiting Results"/></TextBlock>
        </ScrollViewer>

    </Grid>
</Window>
